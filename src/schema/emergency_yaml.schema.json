{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://med-sos.local/schemas/emergency_yaml.schema.json",
  "title": "EmergencyYAML",
  "type": "object",
  "required": [
    "meta",
    "summary",
    "signals",
    "primary_differential",
    "first_checks",
    "cognitive_prompts"
  ],
  "additionalProperties": false,
  "properties": {
    "meta": {
      "type": "object",
      "required": ["id", "title"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9_]+$",
          "minLength": 3,
          "maxLength": 64
        },
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 160
        },
        "parent": {
          "type": ["string", "null"],
          "pattern": "^[a-z0-9_]+$"
        },
        "aliases": {
          "type": "array",
          "minItems": 0,
          "maxItems": 16,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 160
          }
        },
        "keywords": {
          "type": "array",
          "minItems": 0,
          "maxItems": 24,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 160
          }
        },
        "related_topics": {
          "type": "array",
          "minItems": 0,
          "maxItems": 16,
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9_]+$"
          }
        },
        "priority": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 0.5
        },
        "version": {
          "type": ["string", "null"],
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        }
      }
    },
    "summary": {
      "type": "string",
      "minLength": 1,
      "maxLength": 480
    },
    "signals": {
      "type": "array",
      "minItems": 1,
      "maxItems": 12,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 180
      }
    },
    "red_flags": {
      "type": "array",
      "minItems": 0,
      "maxItems": 12,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 180
      }
    },
    "primary_differential": {
      "type": "array",
      "minItems": 1,
      "maxItems": 8,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 160
      }
    },
    "first_checks": {
      "type": "array",
      "minItems": 1,
      "maxItems": 12,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 180
      }
    },
    "cognitive_prompts": {
      "type": "array",
      "minItems": 1,
      "maxItems": 12,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 180
      }
    },
    "contraindications_notes": {
      "type": "array",
      "minItems": 0,
      "maxItems": 12,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 180
      }
    },
    "subtopics": {
      "type": ["array", "null"],
      "items": {
        "type": "object"
      }
    },
    "update_conflicts": {
      "type": "object",
      "additionalProperties": false,
      "default": {
        "added_from_sources": [],
        "removed_from_sources": [],
        "unresolved_conflicts": []
      },
      "properties": {
        "added_from_sources": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 160
          },
          "minItems": 0,
          "maxItems": 64,
          "default": []
        },
        "removed_from_sources": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 160
          },
          "minItems": 0,
          "maxItems": 64,
          "default": []
        },
        "unresolved_conflicts": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 160
          },
          "minItems": 0,
          "maxItems": 64,
          "default": []
        }
      }
    },
    "provenance": {
      "type": "object",
      "additionalProperties": false,
      "default": {
        "last_sources": [],
        "merged_on": null
      },
      "properties": {
        "last_sources": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 160
          },
          "minItems": 0,
          "maxItems": 64,
          "default": []
        },
        "merged_on": {
          "type": ["string", "null"],
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        }
      }
    }
  }
}
